# Quiz Application Backend Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# ENVIRONMENT SELECTION
# =============================================================================
# Environment (dev, development, prod, production)
# Defaults to 'dev' if not set
DJANGO_ENV=dev

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
# Django Secret Key
# For development, a default key is provided
# For production, this MUST be set to a secure random string
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Allowed Hosts (comma-separated, required for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION (Production)
# =============================================================================
# Development uses SQLite by default
# For production, configure PostgreSQL or your preferred database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=quiz_db
DB_USER=quiz_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# CORS SETTINGS
# =============================================================================
# CORS Allowed Origins (comma-separated)
# For production, specify your actual frontend domains
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# EMAIL CONFIGURATION (Optional, for production)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@quizapp.com

# =============================================================================
# SECURITY SETTINGS (Production only)
# =============================================================================
SECURE_SSL_REDIRECT=True
